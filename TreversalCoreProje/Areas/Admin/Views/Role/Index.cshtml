@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<h1>Rol Listesi</h1>
@if (Model.Count > 0)
{
	<table class="table table-bordered">
		<tr>
			<td>#</td>
			<td>Rol Adı</td>
			<td>Rolü Sil</td>
			<td>Rolü Güncelle</td>
		</tr>
		@if (Model.Count > 0)
		{
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<td>@count</td>
					<td>@item.Name</td>
					<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Rolü Sil</a></td>
					<td><a href="#" class="btn btn-outline-success">Rolü Güncelle</a></td>

				</tr>
			}
		}

	</table>
}
else
{

	<div class="alert alert-success">
		<span>Herhangi bir rol bulunamadı!</span>
	</div>

}

<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Girişi</a>
